<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_topic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="david.ratier.coursework.view.TopicActivity">

    <view class="david.ratier.coursework.view.TopicActivity$TopicTabLayout"
        android:id="@+id/topic_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:tabMode="scrollable"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabTextColor="@color/textColorTab"
        app:tabSelectedTextColor="@color/textColorTab"/>

    <view class="david.ratier.coursework.view.TopicActivity$TopicViewPager"
        android:id="@+id/topic_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topic_tab_layout"/>

</RelativeLayout>
